<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.example.UsbMonitor">

    <uses-sdk android:minSdkVersion="11" android:targetSdkVersion="18"/>

    <application android:icon="@drawable/icon" android:label="@string/app_name" android:theme="@android:style/Theme.Holo.Light">
        <activity android:configChanges="orientation|keyboardHidden" android:name="com.example.UsbMonitor.USBActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"/>
            </intent-filter>

            <meta-data android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" android:resource="@xml/device_filter"/>
        </activity>
    </application>
</manifest>
